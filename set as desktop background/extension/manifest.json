{
  "manifest_version": 3,
  "name": "Set as desktop background",
  "version": "1.31",
  "action": {"default_popup": "popup.html"},
  "description": "Choose any image on the web as your desktop wallpaper directly from your browser",
  "icons": {
    "16": "images/16.png",
    "48": "images/48.png"
  },
  "background": {"service_worker": "script/background.js"},
  "options_page": "main.html",
  "permissions": ["contextMenus", "downloads", "nativeMessaging", "notifications", "storage", "tabs"]
}